<configuration>
  <packageSources>
    <!-- 只使用一个包源以避免 NU1507 错误；如需使用内部源可再加 packageSourceMapping -->
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
    
    <!-- GitHub Packages 源（可选，用于从 GitHub 安装包）-->
    <!-- 取消注释下面的行以启用 GitHub Packages -->
    <!-- <add key="github" value="https://nuget.pkg.github.com/JinFanZheng/index.json" /> -->
  </packageSources>
  
  <!-- GitHub Packages 身份验证（如果启用了 GitHub 源）-->
  <!-- 需要在环境变量中设置 GITHUB_TOKEN 或使用 Personal Access Token -->
  <!--
  <packageSourceCredentials>
    <github>
      <add key="Username" value="JinFanZheng" />
      <add key="ClearTextPassword" value="%GITHUB_TOKEN%" />
    </github>
  </packageSourceCredentials>
  -->
</configuration>
