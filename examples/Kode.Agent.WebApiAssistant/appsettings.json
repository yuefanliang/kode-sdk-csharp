{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kode": {
    "ApiKey": "",
    "WorkDir": "",
    "StoreDir": "./.kode",
    "DefaultProvider": "anthropic",
    "DefaultModel": "",
    "SystemPrompt": "You are a helpful personal assistant.",
    "Tools": "fs_read,fs_list,fs_glob,fs_grep",
    "PermissionMode": "auto",
    "AllowTools": "*",
    "RequireApprovalTools": "email_delete,fs_rm",
    "DenyTools": "bash_kill",
    "SkillsDir": "skills",
    "TrustedSkills": "",
    "Sandbox": {
      "UseDocker": false,
      "DockerImage": "kode-agent-sandbox:0.1.0",
      "DockerNetworkMode": "bridge"
    },
    "AgentPool": {
      "Enabled": "auto",
      "MaxAgents": 50,
      "IdleMinutes": 20,
      "SweepSeconds": 60
    },
    "PerAgentDataDir": "false",
    "#Anthropic": {
      "ApiKey": "",
      "BaseUrl": "",
      "ModelId": "",
      "EnableBetaFeatures": false
    },
    "#OpenAI": {
      "ApiKey": "",
      "BaseUrl": "",
      "Organization": "",
      "DefaultModel": ""
    },
    "FileUpload": {
      "MaxFileSize": 104857600,
      "AllowedExtensions": ".txt,.md,.pdf,.png,.jpg,.jpeg,.json,.csv",
      "Directory": "uploads"
    }
  },
  "McpServers": {
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest",
        "--headless=true",
        "--isolated=true"
      ]
    }
  },
  "McpWarmup": {
    "Enabled": true,
    "PreloadTools": true
  },
  "Notify": {
    "DefaultChannel": "DingTalk",
    "DingTalk": {
      "Enabled": false,
      "WebhookUrl": "",
      "Secret": ""
    },
    "WeCom": {
      "Enabled": false,
      "WebhookUrl": "",
      "Secret": ""
    },
    "Telegram": {
      "Enabled": false,
      "WebhookUrl": ""
    }
  },
  "Email": {
    "Enabled": false,
    "FromAddress": "",
    "FromName": "AI Assistant",
    "Imap": {
      "Host": "",
      "Port": 993,
      "UseSsl": true,
      "Username": "",
      "Password": ""
    },
    "Smtp": {
      "Host": "",
      "Port": 587,
      "UseSsl": true,
      "Username": "",
      "Password": ""
    }
  }
}
